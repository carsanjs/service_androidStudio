<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4DCDC">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="675dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="#D5DDDD"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/atrasU"
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/left" />

            <Space
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Quieres saber donde estoy?"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Longitud"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idlongitud"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#D5D6D6"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Latitud"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idlalitud"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#D5D6D6"
            android:gravity="center" />

        <Button
            android:id="@+id/btncoord"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/redondbtn"
            android:text="Mi Ubicacion" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>